<section>
    <div class="container">
        <div class="row mt-5">
            <a class="btn btn-success ml-auto mb-3" href="/admin/add-product ">Add Product</a>
        </div>
        <table class="table mt-5 col-12" id="productsTable">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">category</th>
      <th scope="col">Image</th>
       <th scope="col">description</th>
       <th scope="col">Edit/Remove</th>
    </tr>
  </thead>
  <tbody>
    
    {{#each products}}
    <tr>
      <td>{{this.Name}}</td>
      <td>{{this.Category}}</td>
      <td><img style="width:50px;height:50px" src="/product-images/{{this._id}}.jpg"></td>
       <td>{{this.Description}}</td> 
      <td><a href="/admin/edit-product/{{this._id}}" class="btn btn-primary">Edit</a>
      <a href="/admin/delete-product/{{this._id}}" class="btn btn-danger" onclick="return confirm('sure you need to delete {{this.Name}}')" >Delete</a></td>
      
    </tr>
    {{/each}}
  </tbody>
</table>
    </div>
</section>
<script>
  $(document).ready( function () {
    $('#productsTable').DataTable();
} );
</script>